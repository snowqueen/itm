<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Content</th>
    <th>Published</th>
    <th>Publish date</th>
    <th>Slug</th>
    <th>Comments allowed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.summary %></td>
    <td><%= post.content %></td>
    <td><%= post.published %></td>
    <td><%= post.publish_date %></td>
    <td><%= post.slug %></td>
    <td><%= post.comments_allowed %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
