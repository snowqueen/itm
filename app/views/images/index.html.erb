<h1>Listing images</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.title %></td>
    <td><%= image_tag image.binary.url(:thumb) %></td>
    <td><%= link_to 'Image link', image.binary.url %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

