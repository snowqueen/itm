<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Content</th>
    <th>Published</th>
    <th>Publish date</th>
    <th>Slug</th>
    <th>Comments allowed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= truncate(post.summary, :length => 40, :omission => "..." ) %></td>
    <td><%= truncate(post.content, :length => 40, :omission => "..." ) %></td>
    <td><%= post.published %></td>
    <td><%= post.publish_date %></td>
    <td><%= post.slug %></td>
    <td><%= post.comments_allowed %></td>
    <td><%= link_to 'Show', [:admin, post] %></td>
    <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
    <td><%= link_to 'Destroy', [:admin, post], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

